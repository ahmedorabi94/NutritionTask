<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ahmedorabi.nutritiontask.data.model.Parsed" />

        <variable
            name="callback"
            type="com.ahmedorabi.nutritiontask.ui.adapter.RecipeCallback" />

        <variable
            name="viewmodel"
            type="com.ahmedorabi.nutritiontask.ui.ingredientlist.IngredientListViewModel" />

    </data>

    <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> callback.onItemClick(item)}"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        card_view:cardElevation="2dp"
        card_view:rippleColor="#cfd8dc">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quantityId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="2"
                android:text="@{item.quantity + ``}"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unitTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="2"
                android:text="@{item.measure}"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/foodTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="1"
                android:text="@{item.food}"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/caloriesTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="1"
                android:text="@{String.valueOf(viewmodel.getRoundFloat(item.nutrients.component6().quantity)) + ` kcal`}"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weightTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="1"
                android:text="@{String.valueOf(viewmodel.getRoundFloat(item.weight)) + ` g`}"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>